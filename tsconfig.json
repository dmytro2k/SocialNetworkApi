{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "@types",
    "src"
  ]
}